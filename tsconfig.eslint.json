{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/eslint",
    "outDir": "./eslint",

    "module": "preserve",
    "moduleResolution": "bundler",

    "noEmit": false,

    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false
  },
  "include": ["./src/eslint/**/*"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/_jest/**"
  ]
}